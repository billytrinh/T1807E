<% include template/header %>
<!-- Modal -->
<div class="opacity col-md-12"></div>
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-center" id="exampleModalLongTitle">Are you sure delete?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>
<div class="detail8">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <% if(products){ %>
                <table class="table table-hover m-t-150 box">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(function(mot){ %>
                        <tr>
                            <td>
                                <a href="/detail-product/<%= mot.item._id %>"><%= mot.item.pro_name %></a>
                                <a href="/detail-product/<%= mot.item._id %>"><img src="<%= mot.item.big_image[0] %>" alt=""></a> 
                            </td>
                            <td>
                                <div class="form-group col-sm-3">
                                  <label for=""></label>
                                  <input type="number"
                                    class="form-control" name="" id="" value="<%= mot.qty %>" aria-describedby="helpId" placeholder="">
                                </div>
                                
                            </td>
                            <td>
                                <%= mot.price %>$</td>
                            <td>
                                <a class="delete-user" data-toggle="modal" data-href="/alithea/remove-product/<%= mot.item._id %>" data-target="#confirm-delete">
                                <i class="fa fa-trash-alt list-users" aria-hidden="true"></i></a></td>
                        </tr>
                        <%}); %>
                        
                    </tbody>
                </table>
                <p class="sangbenphai"> <a href="/alithea/check-out" class="btn btn-success btn-block t-30 nut-checkout">Check out</a></p>

                 <p class="sangbenphai"> <a href="/alithea/check-out" class="btn btn-danger btn-block p-30 nut-checkout"><%= totalPrice %></a></p>
                <% }else { %>
                    
                <button type="button" name="" id="" class="btn btn-danger m-t-150" btn-lg btn-block">You have not any products in shopping cart</button>
                <%} %>
                
            </div>
        </div>
    </div>
</div>
<% include template/footer %>