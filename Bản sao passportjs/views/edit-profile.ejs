    <div class="container login-container">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <% if(success_msg.length >0){ %>
                    <div class="alert alert-success text-center wow bounceIn col-sm-12 " role="alert">
                        <strong>
                            <%= success_msg %></strong>
                    </div>
                    <%} %>
                </div>
            </div>
            <div class="col-md-12 login-form-2 wow bounceIn" data-wow-delay="0.1s">
                <h3>Profile</h3>
                <% data.forEach(function(mot){ %>
                <form class="needs-validation" id="checkout-form" action="/edit-profile/<%= mot._id %>" method="POST"
                    novalidate>
                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="validationCustom01">Firstname</label>
                            <input type="text" class="form-control" id="validationCustom01" value="<%= mot.firstname %>"
                                name="firstname" placeholder="First name" value="" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide Firstname.
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationCustom05">Lastname</label>
                            <input type="text" value="<%= mot.lastname %>" name="lastname" class="form-control card-name"
                                id="validationCustom05" placeholder="Lastname" autocomplete="off" required>

                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationCustom03">Username</label>
                            <input type="text" class="form-control" value="<%= mot.username %>" id="validationCustom03"
                                name="username" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid username.
                            </div>
                        </div>

                    </div>

                    <div class="form-row">
                        <div class="col-md-4 mb-3">
                            <label for="validationCustom03">Telephone</label>
                            <input type="text" class="form-control" value="<%= mot.phone %>" id="validationCustom03"
                                name="phone" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid telephone.
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationCustom03">Address</label>
                            <input type="text" class="form-control" value="<%= mot.address %>" id="validationCustom03"
                                name="address" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid address.
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="validationCustom03">Email</label>
                            <input type="text" class="form-control" value="<%= mot.email %>" id="validationCustom03"
                                placeholder="Email" name="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid Email.
                            </div>
                        </div>

                    </div>

                    <button class="btn btn-success" type="submit">Save changes</button>
                </form>
                <%}) %>
                <script>
                    // Example starter JavaScript for disabling form submissions if there are invalid fields
                    (function () {
                        'use strict';
                        window.addEventListener('load', function () {
                            // Fetch all the forms we want to apply custom Bootstrap validation styles to
                            var forms = document.getElementsByClassName('needs-validation');
                            // Loop over them and prevent submission
                            var validation = Array.prototype.filter.call(forms, function (form) {
                                form.addEventListener('submit', function (event) {
                                    if (form.checkValidity() === false) {
                                        event.preventDefault();
                                        event.stopPropagation();
                                    }
                                    form.classList.add('was-validated');
                                }, false);
                            });
                        }, false);
                    })();
                </script>
            </div>
        </div>
    </div>
</div>
<% include template/footer %>