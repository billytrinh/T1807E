<% include template/headeradmin %>

<div class="col-sm-9 session">
    <h1 class="text-center title-block title-block-admin">Edit Category</h1>
    <div class="row">
        <% data.forEach(function(mot){ %>
        <div class="col-sm-12 content">
            <form action="/admin/edit-product/<%= mot._id %>" method="POST" class="col-sm-12">
                <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" class="form-control" name="pro_name" id="" aria-describedby="helpId" value="<%= mot.pro_name%>"
                        placeholder="">
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <input type="text" class="form-control" name="pro_desc" id="" aria-describedby="helpId" value="<%= mot.pro_desc%>"
                        placeholder="">
                </div>
                <div class="form-group">
                    <label for="">Price</label>
                    <input type="text" class="form-control" name="pro_price" id="" aria-describedby="helpId" value="<%= mot.pro_price%>"
                        placeholder="">
                </div>
                <div class="form-group">
                    <label for="">Amount</label>
                    <input type="text" class="form-control" name="pro_amount" id="" aria-describedby="helpId" value="<%= mot.pro_amount%>"
                        placeholder="">
                </div>
                <div class="row">
                    <div class="form-group col-sm-6">
                        <label for="exampleFormControlSelect1">Categories are chosen before!</label>
                        <select class="form-control" name="selectpicker" multiple>
                            <% category.forEach(function(motphantu){ %>
                            <option value="<%= motphantu._id %>">
                                <%= motphantu.cate_name %>
                            </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="exampleFormControlSelect1">List Categories</label>
                        <select class="form-control" name="selectpicker_edit" multiple>
                            <% all_category.forEach(function(mot_loai){ %>
                            <option value="<%= mot_loai._id %>">
                                <%= mot_loai.cate_name %>
                            </option>
                            <% }) %>
                        </select>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <p>Old thumbnail</p>
                        <div class="col-sm-12">
                            <img src=" <%= mot.big_image[0] %> " class="col-sm-12 img-edit-cat" alt="">
                        </div>
                    </div>
                </div>
                <hr>
                <div class="col-sm-12">
                    <p>Old Gallery</p>
                    <div class="row">
                        <% mot.small_image.forEach(function(motanh){ %>
                        <div class="col-sm-3">
                            <img src=" <%= motanh %>" class="col-sm-12 img-edit-cat">
                        </div>
                        <% }) %>
                    </div>
                </div>

                <button type="submit" class="btn btn-success btn-block save-changes">Save changes</button>
            </form>
            <% }) %>

            <div class="add-img col-sm-12">
                <p>New gallery</p>
                <div class="row">
                    <div class="col-sm-3">
                        <form id="upload-widget" method="post" action="/admin/uploadimgs" class="dropzone col-sm-12 content box"
                            enctype="multipart/form-data"></form>
                    </div>
                    <div class="col-sm-3">
                        <form id="upload-widget" method="post" action="/admin/uploadimgs" class="dropzone col-sm-12 content box"
                            enctype="multipart/form-data"></form>
                    </div>
                    <div class="col-sm-3">
                        <form id="upload-widget" method="post" action="/admin/uploadimgs" class="dropzone col-sm-12 content box"
                            enctype="multipart/form-data"></form>
                    </div>
                    <div class="col-sm-3">
                        <form id="upload-widget" method="post" action="/admin/uploadimgs" class="dropzone col-sm-12 content box"
                            enctype="multipart/form-data"></form>
                    </div>
                </div>
            </div>
            <div class="add-img col-sm-12 edit-thumb">
                <p>New Thumbnail</p>
                <div class="col-sm-12">
                    <form id="upload-widget" method="post" action="/admin/uploadthumb" class="dropzone col-sm-12 content box"
                        enctype="multipart/form-data"></form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<% include template/footeradmin %>