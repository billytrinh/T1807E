<% include template/headeradmin %>
<div class="col-sm-9 session">
    <div class="row">
        <section class="col-sm-12 connectedSortable ui-sortable">
            <!-- Chat box -->
            <div class="box box-primary">
                <div class="box-header ui-sortable-handle" style="cursor: move;">
                    <i class="fas fa-clipboard-list"></i>

                    <h3 class="box-title">Messages</h3>

                    
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <!-- See dist/js/pages/dashboard.js to activate the todoList plugin -->
                    <ul class="todo-list ui-sortable">
                        
                        <% data.forEach(function(message){ %>
                        <li>
                            <span class="handle ui-sortable-handle">
                                <i class="fa fa-trash-alt"></i>
                                <i class="fa fa-ellipsis-v"></i>
                            </span>
                            <input type="checkbox" value="">
                            <span class="text"><%= message.email %></span>
                            <small class="label label-info"><i class="fa fa-clock-o"></i><%=message.date %></small>
                            <i class="fa fa-chevron-down selector"></i>
                                    <p class="content-message"><%= message.message %></p>
                        
                                
                            
                        </li>
                        <% }) %>
                        
                    </ul>
                </div>
            </div>
            <div class="col-sm-12">
                    <% if (locals.pages > 0) { %>
                    <nav aria-label="Page navigation example" class="col-sm-4 offset-sm-4">
                        <ul class="pagination">
                            <% if (current == 1) { %>
                            <li class="page-item">
                                <a class="page-link cus-page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">First</span>
                                </a>
                            </li>
                            <% } else { %>
                            <li class="page-item"><a class="page-link cus-page-link" href="/admin/view-message/1"><span aria-hidden="true">First</span></a></li>
                            <% } %>
                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                            <% if (i !== 1) { %>
                            <li class="page-item disabled"><a class="page-link cus-page-link" href="#">...</a></li>
                            <% } %>
                            <% for (; i <= (Number(current) + 4) && i <= locals.pages; i++) { %>
                            <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link cus-page-link" href="#">
                                    <%= i %></a></li>
                            <% } else { %>
                            <li class="page-item"><a class="page-link cus-page-link" href="/admin/view-message/<%= i %>">
                                    <%= i %></a></li>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < locals.pages) { %>
                            <li class="page-item disabled"><a class="page-link cus-page-link">...</a></li>
                            <% } %>
                            <% } %>
                            <li class="page-item">
                                <a class="page-link cus-page-link" href="/admin/view-message/<%= pages %>" aria-label="Next">
                                    <span aria-hidden="true">Last</span>
                                </a>
                            </li>
                            <!-- <% if (current == locals.pages) { %>
                            <li class="page-item">
                                <a class="page-link cus-page-link" href="/admin/list-users/<%= pages %>" aria-label="Next">
                                    <span aria-hidden="true">Last</span>
                                </a>
                            </li>
                            <% } %> -->
                        </ul>
                    </nav>
                    <% } %>
                </div>
        </section>

    </div>
</div>
<% include template/footeradmin %>